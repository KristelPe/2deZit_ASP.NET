@model IEnumerable<MvcCompanies.Models.Employee>
@{
    ViewData["Title"] = ViewData["DepartmentName"] + " - Employees";
}
<div class="jumbotron">
    <h1>@ViewData["DepartmentName"]</h1>
    <p>Employees</p>
</div>
<p>
    <a asp-controller="Departments" asp-action="Index" asp-route-id='@ViewData["CompanyID"]'  class="btn btn-default">Back</a>
    <a asp-action="Create" asp-route-id='@ViewData["DepartmentID"]' class="btn btn-info" style="float:right">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Occupation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occupation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                    <!--<a asp-action="Details" asp-route-id="@item.EmployeeID">Details</a> |-->
                    <a asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
