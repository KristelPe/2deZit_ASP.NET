@model IEnumerable<MvcCompanies.Models.Company>
@{
    ViewData["Title"] = "Companies";
}
<div class="jumbotron">
    <h1>MvcCompanies</h1>
    <p>Companies</p>
</div>
<p>
    <a asp-action="Create" class="btn btn-info" style="float:right">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Adres)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.CompanyID">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.CompanyID">Departments</a> |
        <a asp-action="Delete" asp-route-id="@item.CompanyID">Delete</a>
    </td>
</tr>
}
    </tbody>
</table>
